{
  "name": "use-apple-pay",
  "version": "1.0.1",
  "description": "A React library for integrating Apple Pay into your web applications with ease. Provides React hooks and components to handle Apple Pay payments seamlessly.",
  "author": {
    "name": "midoghranek",
    "url": "https://github.com/midoghranek"
  },
  "license": "MIT",
  "homepage": "https://github.com/midoghranek/use-apple-pay#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/midoghranek/use-apple-pay.git"
  },
  "bugs": {
    "url": "https://github.com/midoghranek/use-apple-pay/issues"
  },
  "keywords": [
    "react",
    "apple-pay",
    "applepay",
    "payment",
    "payments",
    "typescript",
    "hooks",
    "components",
    "apple",
    "pay",
    "web-payments",
    "e-commerce",
    "checkout"
  ],
  "main": "dist/index.js",
  "module": "dist/use-apple-pay.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage --watchAll=false",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "prepublishOnly": "yarn build && yarn test && yarn lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/use-apple-pay.cjs.production.min.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/use-apple-pay.esm.js",
      "limit": "12 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/applepayjs": "^3.0.4",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "husky": "^7.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1"
  }
}
